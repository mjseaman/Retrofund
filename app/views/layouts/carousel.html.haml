    /
      Carousel
      \==================================================
    #myCarousel.carousel.slide
      / Indicators
      %ol.carousel-indicators
        %li.active{"data-slide-to" => "0", "data-target" => "#myCarousel"}
        %li{"data-slide-to" => "1", "data-target" => "#myCarousel"}
        %li{"data-slide-to" => "2", "data-target" => "#myCarousel"}
      .carousel-inner
        .item.active
          %img{:alt => "First slide", "data-src" => "holder.js/100%x500/auto/#777:#7a7a7a/text:First slide", :src => "data:image/png;base64,"}/
          .container
            .carousel-caption
              %h1 Example headline.
              %p Cras justo odio, dapibus ac facilisis in, egestas eget quam. Donec id elit non mi porta gravida at eget metus. Nullam id dolor id nibh ultricies vehicula ut id elit.
              %p
                %a.btn.btn-large.btn-primary{:href => "#"} Sign up today
        .item
          %img{:alt => "Second slide", "data-src" => "holder.js/100%x500/auto/#777:#7a7a7a/text:Second slide", :src => "data:image/png;base64,"}/
          .container
            .carousel-caption
              %h1 Another example headline.
              %p Cras justo odio, dapibus ac facilisis in, egestas eget quam. Donec id elit non mi porta gravida at eget metus. Nullam id dolor id nibh ultricies vehicula ut id elit.
              %p
                %a.btn.btn-large.btn-primary{:href => "#"} Learn more
        .item
          %img{:alt => "Third slide", "data-src" => "holder.js/100%x500/auto/#777:#7a7a7a/text:Third slide", :src => "data:image/png;base64,"}/
          .container
            .carousel-caption
              %h1 One more for good measure.
              %p Cras justo odio, dapibus ac facilisis in, egestas eget quam. Donec id elit non mi porta gravida at eget metus. Nullam id dolor id nibh ultricies vehicula ut id elit.
              %p
                %a.btn.btn-large.btn-primary{:href => "#"} Browse gallery
      %a.left.carousel-control{"data-slide" => "prev", :href => "#myCarousel"}
        %span.glyphicon.glyphicon-chevron-left
      %a.right.carousel-control{"data-slide" => "next", :href => "#myCarousel"}
        %span.glyphicon.glyphicon-chevron-right
    / /.carousel
